<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycrm.crm.mapper.ProductMapper">
    <select id="listPro" resultType="com.mycrm.crm.entity.Product">
        SELECT * FROM product WHERE `status`=#{status}
    </select>
    <select id="total" resultType="integer">
        SELECT COUNT(*) as total FROM product WHERE `status`=#{status}
    </select>
</mapper>
